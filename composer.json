{
    "name": "oneshoe/drupal-codeception",
    "description": "Extension to the Codeception toolset for Drupal testing.",
    "type": "package",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "drush/drush": "^10.3 | ^11",
        "guncha25/drupal-codeception": "^9.0",
        "drupal/test_users": "^1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "codeception/module-asserts": "^1.3",
        "codeception/module-db": "^1.1",
        "composer/installers": "^1.2",
        "composer/xdebug-handler": "^1.0",
        "drupal/core-composer-scaffold": "^8",
        "drupal/core-recommended": "^8.8"
    },
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Eelke Blok",
            "email": "eelke.blok@oneshoe.nl"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Codeception\\": "src/Codeception",
            "Pages\\": "src/Pages"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "allowed-packages": [
                "drupal/core"
            ]
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
